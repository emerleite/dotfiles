#!/bin/bash

# install homebrew
ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

# Update homebrew
brew install git
brew update
brew upgrade

# install mas
brew install mas

# install essentials
brew install \
aria2 \
autoconf \
automake \
awscli \
bash \
bash-completion \
bat \
cocoapods \
colordiff \
coreutils \
direnv \
docker-completion \
docker-compose-completion \
exiftool \
git-extras \
gnu-sed \
graphicsmagick \
gron \
hashdeep \
imagemagick \
jpegoptim \
jq \
md5sha1sum \
moreutils \
openssl \
pip-completion \
pngcrush \
sqlite \
ssh-copy-id \
the_platinum_searcher \
tree \
wget \
z \
zlib \
zopfli \
media-info \
htop \
thefuck \
httpie \
gphotos-uploader-cli \
awslogs \
emacs \
neofetch \
telnet \
pgcli \
mycli \
tldr \
ffmpeg \
witch \
wrk

# install "out of appstore" apps
brew install --cask dash
brew install --cask docker
brew install --cask droplr
brew install --cask google-backup-and-sync
brew install --cask google-chrome
brew install --cask hammerspoon
brew install --cask iconjar
brew install --cask iterm2
brew install --cask ksdiff
brew install --cask sketch
brew install --cask spotify
brew install --cask the-unarchiver
brew install --cask transmission
brew install --cask visual-studio-code
brew install --cask vlc
brew install --cask telegram
brew install --cask rowanj-gitx
brew install --cask kindle
brew install --cask dropbox
brew install --cask insomnia
brew install --cask appcleaner
brew install --cask numi
brew install --cask sdformatter
brew install --cask rectangle
brew install --cask zoom
brew install --cask ngrok
brew install --cask drawio
brew install --cask onlyoffice
brew install --cask keybase

# install appstore apps
echo "ðŸ’¿  Slack" && mas install 803453959
echo "ðŸ’¿  Todoist" && mas install 585829637
echo "ðŸ’¿  Enpass" && mas install 732710998
echo "ðŸ’¿  WhatsApp" && mas install 1147396723
echo "ðŸ’¿  Skitch" && mas install 425955336


# install sshfs
brew install --cask osxfuse
brew install sshfs

# install asdf
brew install asdf gnupg zlib
. $(brew --prefix asdf)/asdf.sh
. $(brew --prefix asdf)/etc/bash_completion.d/asdf.bash
asdf plugin-add dart
asdf plugin-add elixir
asdf plugin-add erlang
asdf plugin-add flutter
asdf plugin-add golang
asdf plugin-add gradle
asdf plugin-add groovy
asdf plugin-add java
asdf plugin-add kotlin
asdf plugin-add lua
asdf plugin-add maven
asdf plugin-add nodejs
asdf plugin-add packer
asdf plugin-add python
asdf plugin-add R
asdf plugin-add ruby
asdf plugin-add rust
asdf plugin-add scala
asdf plugin-add shfmt
asdf plugin-add sqlite
asdf plugin-add swift
asdf plugin-add terraform
asdf plugin-add terraform-validator
asdf plugin-add tmux
asdf plugin-add yarn

bash -e -c "cd ~ && asdf install"